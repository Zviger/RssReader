<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowNewsItemActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/show_news_item_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"/>

    <TextView
        android:layout_below="@id/show_news_item_activity_toolbar"
        android:id="@+id/news_item_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:ems="10"
        android:hint="@string/title"
        android:gravity="top"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="4dp"
        android:textSize="25sp"
        />
    <TextView
        android:layout_below="@id/news_item_title"
        android:id="@+id/news_item_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ems="10"
        android:gravity="top"
        android:layout_gravity="top"
        android:hint="@string/whats_in_your_mind"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="4dp"
        tools:text="@tools:sample/lorem/random"
        />

</RelativeLayout>